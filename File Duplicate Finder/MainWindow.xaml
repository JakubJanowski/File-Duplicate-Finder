            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border Name="Border" Padding="2" Height="24" SnapsToDevicePixels="true" Background="Transparent" MouseEnter="ShowButtons" MouseLeave="HideButtons">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <Image Margin="0,0,5,3" Grid.Column="0" Width="16" Height="16" Source="{Binding Icon}"/>
                                <TextBlock Grid.Column="1" Text="{Binding Path}"/>
                                <TextBlock Margin="5,0,5,0" Grid.Column="2" Text="{Binding Size}" Foreground="Gray"/>
                                <Button Visibility="Collapsed" Grid.Column="3" Click="OpenFileDirectoryPrimary">Open in explorer</Button>
                                <Button Margin="5,0,5,0" Visibility="Collapsed" Grid.Column="4" Click="DuplicatedFilesPrimaryOnlyIgnoreFile">Ignore file</Button>
