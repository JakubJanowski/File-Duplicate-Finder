                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <Image Margin="0,0,5,3" Grid.Column="0" Width="16" Height="16" Source="{Binding Icon}"/>
                                <TextBlock Grid.Column="1" Text="{Binding Path}"/>
                                <TextBlock Margin="5,0,5,0" Grid.Column="2" Text="{Binding Size}" Foreground="Gray"/>
                                <Button Visibility="Collapsed" Grid.Column="3" Click="OpenFileDirectorySecondary">Open in explorer</Button>
                                <Button Margin="5,0,5,0" Visibility="Collapsed" Grid.Column="4" Click="DuplicatedFilesSecondaryIgnoreFile">Ignore file</Button>
