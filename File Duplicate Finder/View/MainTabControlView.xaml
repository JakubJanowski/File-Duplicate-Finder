    <TabControl>
        <TabItem x:Name="logTabItem" Header="Log">
            <ListView x:Name="logListView" VerticalAlignment="Stretch"/>
        </TabItem>
        <TabItem Header="Empty Directories" Visibility="{Binding PrimaryOnly, Converter={StaticResource NotBoolToVisCollapsed}}">
            <TabControl>
                <TabItem Header="Primary directory">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Button Grid.Row="0" Width="100" HorizontalAlignment="Left" Command="{Binding RemoveAllEmptyDirectoriesPrimaryCommand}">Remove all</Button>
                        <ListView x:Name="emptyDirectoriesPrimaryListView" Grid.Row="1" ItemContainerStyle="{StaticResource emptyDirectoriesPrimaryListViewItemWithButtonStyle}" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Secondary directory">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Button Grid.Row="0" Width="100" HorizontalAlignment="Left" Command="{Binding RemoveAllEmptyDirectoriesSecondaryCommand}">Remove all</Button>
                        <ListView x:Name="emptyDirectoriesSecondaryListView" Grid.Row="1" ItemContainerStyle="{StaticResource emptyDirectoriesSecondaryListViewItemWithButtonStyle}" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </TabItem>
        <TabItem Header="Empty Files" Visibility="{Binding PrimaryOnly, Converter={StaticResource NotBoolToVisCollapsed}}">
            <TabControl>
                <TabItem Header="Primary directory">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Button Grid.Row="0" Width="100" HorizontalAlignment="Left" Command="{Binding RemoveAllEmptyFilesPrimaryCommand}">Remove all</Button>
                        <ListView x:Name="emptyFilesPrimaryListView" Grid.Row="1" ItemContainerStyle="{StaticResource emptyFilesPrimaryListViewItemWithButtonStyle}" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Secondary directory">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Button Grid.Row="0" Width="100" HorizontalAlignment="Left" Command="{Binding RemoveAllEmptyFilesSecondaryCommand}">Remove all</Button>
                        <ListView x:Name="emptyFilesSecondaryListView" Grid.Row="1" ItemContainerStyle="{StaticResource emptyFilesSecondaryListViewItemWithButtonStyle}" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </TabItem>
        <TabItem Header="Duplicated Files" Visibility="{Binding PrimaryOnly, Converter={StaticResource NotBoolToVisCollapsed}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Margin="5" Orientation="Horizontal" Grid.Row="0">
                    <CheckBox Checked="IdenticalSubpathChecked" Unchecked="IdenticalSubpathUnchecked" IsEnabled="False">Identical subpath only</CheckBox>
                    <RadioButton GroupName="sort" Margin="5,0,5,0" Command="{Binding SortAlphabeticallyCommand}">Sort alphabetically</RadioButton>
                    <RadioButton GroupName="sort" Command="{Binding SortBySizeCommand}" IsChecked="True">Sort by size</RadioButton>
                </StackPanel>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation='Horizontal' Grid.Column="0">
                        <TextBlock>Primary directory</TextBlock>
                        <Button Margin="15,0,0,0" Command="{Binding RemoveAllPrimaryCommand}">Remove all</Button>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock>Secondary directory</TextBlock>
                        <Button Margin="15,0,0,0" Command="{Binding RemoveAllSecondaryCommand}">Remove all</Button>
                    </StackPanel>
                </Grid>
                <ListView x:Name="duplicatedFilesListView" Grid.Row="2" ItemContainerStyle="{StaticResource duplicateFileListViewStyle}" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
            </Grid>
        </TabItem>
        <TabItem Header="Empty Directories" Visibility="{Binding PrimaryOnly, Converter={StaticResource BoolToVisCollapsed}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Grid.Row="0" Width="100" HorizontalAlignment="Left" Command="{Binding RemoveAllEmptyDirectoriesPrimaryCommand}">Remove all</Button>
                <ListView x:Name="emptyDirectoriesPrimaryOnlyListView" Grid.Row="1" ItemContainerStyle="{StaticResource emptyDirectoriesPrimaryListViewItemWithButtonStyle}" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
            </Grid>
        </TabItem>
        <TabItem Header="Empty Files" Visibility="{Binding PrimaryOnly, Converter={StaticResource BoolToVisCollapsed}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Grid.Row="0" Width="100" HorizontalAlignment="Left" Command="{Binding RemoveAllEmptyFilesPrimaryCommand}">Remove all</Button>
                <ListView x:Name="emptyFilesPrimaryOnlyListView" Grid.Row="1" ItemContainerStyle="{StaticResource emptyFilesPrimaryListViewItemWithButtonStyle}" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
            </Grid>
        </TabItem>
        <TabItem Header="Duplicated Files" Visibility="{Binding PrimaryOnly, Converter={StaticResource BoolToVisCollapsed}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Margin="5" Orientation="Horizontal" Grid.Row="0">
                    <CheckBox Checked="IdenticalSubpathChecked" Unchecked="IdenticalSubpathUnchecked" IsEnabled="False">Identical subpath only</CheckBox>
                    <RadioButton GroupName="sortPrimaryOnly" Margin="5,0,5,0" Command="{Binding SortAlphabeticallyPrimaryOnlyCommand}">Sort alphabetically</RadioButton>
                    <RadioButton GroupName="sortPrimaryOnly" Command="{Binding SortBySizePrimaryOnlyCommand}" IsChecked="True">Sort by size</RadioButton>
                </StackPanel>
                <ListView x:Name="duplicatedFilesPrimaryOnlyListView" ItemContainerStyle="{StaticResource duplicatedFilesPrimaryOnlyListViewStyle}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Grid.Row="1"/>
            </Grid>
        </TabItem>
    </TabControl>
</UserControl>
